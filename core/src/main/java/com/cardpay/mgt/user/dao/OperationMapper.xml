<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cardpay.mgt.user.dao.OperationMapper">
    <resultMap id="BaseResultMap" type="com.cardpay.mgt.user.model.Operation">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="ID" jdbcType="DECIMAL" property="id"/>
        <result column="OPERATION_NAME" jdbcType="VARCHAR" property="operationName"/>
        <result column="OPERATION_NAME_ZH" jdbcType="TIMESTAMP" property="operationNameZh"/>
    </resultMap>

    <select id="selectByIdList" resultMap="BaseResultMap">
        SELECT * FROM T_OPERATION WHERE ID IN
        <foreach collection="list" item="authorityOperation" index="index"
                 open="(" close=")" separator=",">
            #{authorityOperation.operationId}
        </foreach>
    </select>

</mapper>