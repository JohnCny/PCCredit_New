<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cardpay.mgt.message.dao.TMessageMapper">
    <resultMap id="BaseResultMap" type="com.cardpay.mgt.message.model.TMessage">
        <id column="ID" jdbcType="DECIMAL" property="id" />
        <result column="MSG_TITLE" jdbcType="VARCHAR" property="msgTitle" />
        <result column="MSG_CONTENT" jdbcType="VARCHAR" property="msgContent" />
        <result column="MSG_TYPE" jdbcType="DECIMAL" property="msgType" />
        <result column="MSG_LEVEL" jdbcType="DECIMAL" property="msgLevel" />
        <result column="MSG_STATE" jdbcType="DECIMAL" property="msgState" />
        <result column="USER_ID" jdbcType="DECIMAL" property="userId" />
        <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime" />
        <result column="IS_BROADCAST" jdbcType="DECIMAL" property="isBroadcast" />
    </resultMap>

    <!--获取消息已读/未读数量-->
    <select id="getMessageByState" resultType="Integer">
        SELECT count(1)
        FROM t_message
        WHERE user_id = #{userId}
        AND msg_state = #{msgState}
    </select>

    <!--批量添加消息信息-->
    <insert id="batchInsert"  parameterType="List">
    INSERT INTO T_MESSAGE (ID, MSG_TITLE, MSG_CONTENT, MSG_TYPE, MSG_LEVEL, MSG_STATE, USER_ID, CREATE_TIME, IS_BROADCAST)
    <foreach collection="list" open="(" close=")" item="item" separator="union" index="index">
       SELECT #{item.id}, #{item.msgTitle}, #{item.msgContent}, #{item.msgType}, #{item.msgLevel}
        , #{item.msgState}, #{item.userId}, #{item.createTime}, #{item.isBroadcast}
        FROM DUAL
    </foreach>
    </insert>
</mapper>